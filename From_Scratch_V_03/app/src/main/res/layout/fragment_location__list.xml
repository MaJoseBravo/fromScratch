<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context="app.random.generator.fromscratch_v01.Location_List">

    <!-- TODO: Update blank fragment layout -->
    <!-- <TextView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:text="@string/hello_blank_fragment" />-->

     <TextView
         android:id="@+id/titulo_locat_list"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="22dp"
         android:textSize="24dp"
         android:textStyle="normal"
         android:textColor="#D43B3F"
         android:text="Locations" />

    <ImageView
        android:id="@+id/icono_myLocations"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@+id/titulo_locat_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/location01" />

    <TextView
        android:id="@+id/noLocationsTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You don't have locations yet."
        android:layout_marginTop="50dp"
        android:visibility="invisible"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textStyle="normal"
        android:textColor="#333333"
        android:layout_below="@+id/icono_myLocations"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reciclador_locaciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp"
        android:scrollbars="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/icono_myLocations"
        android:layout_alignParentStart="true"  />


</RelativeLayout>
