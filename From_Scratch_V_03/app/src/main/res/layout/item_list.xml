<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/title_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tittle"
        android:textColor="#C24040"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/synopis_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_story"
        android:layout_marginTop="10dp"
        android:text="Synopsis"
        android:maxLines = "2"
        android:textColor="#333333"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icono_notebook"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/notebook"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/genre" />

        <TextView
            android:id="@+id/genre_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="8dp"
            android:textColor="#333333"
            android:textStyle="italic" />
    </LinearLayout>


</LinearLayout>